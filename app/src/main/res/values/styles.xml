<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BotaoPrincipal" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/rajdhani_bold</item>
        <item name="android:backgroundTint">@color/orange_700</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Texto" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/rajdhani_regular</item>
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="Titulo" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/rajdhani_bold</item>
        <item name="android:textColor">@color/blue_700</item>
    </style>

